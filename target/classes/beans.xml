<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

<bean id="movie" class="com.stackroute.taskOne.beans.Movie">
    <property name="movieName" value="Gully Boy"/>
    <property name="genreName" value="Musical"/>
    <property name="actor" ref="actor1"/>
</bean>

    <bean id="actor1" class="com.stackroute.taskOne.beans.Actor">
        <property name="name" value="Alia Bhatt"/>
        <property name="gender" value="female"/>
        <property name="age" value="24"/>
    </bean>

